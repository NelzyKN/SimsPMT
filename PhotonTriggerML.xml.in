<?xml version="1.0" encoding="iso-8859-1"?>

<!-- Configuration of PhotonTriggerML Module (kept simple/compatible) -->

<PhotonTriggerML>

  <!-- Energy range for trigger application -->
  <EnergyMin unit="eV"> 1e18 </EnergyMin>
  <EnergyMax unit="eV"> 1e19 </EnergyMax>

  <!-- Neural Network threshold for photon classification (base; auto-tuned slightly during run) -->
  <PhotonThreshold> 0.65 </PhotonThreshold>

  <!-- Output ROOT file name -->
  <OutputFile> photon_trigger_ml_physics.root </OutputFile>

  <!-- Keep behavior consistent with previous runs -->
  <SaveFeatures> true </SaveFeatures>
  <ApplyTrigger> true </ApplyTrigger>

</PhotonTriggerML>

