<?xml version="1.0" encoding="iso-8859-1"?>

<!-- Configuration of PhotonTriggerML Module (classic format) -->

<PhotonTriggerML>

  <!-- Energy range for trigger application -->
  <EnergyMin unit="eV"> 1e18 </EnergyMin>
  <EnergyMax unit="eV"> 1e19 </EnergyMax>

  <!-- Baseline neural-network threshold (used as "BaseThreshold" in summary) -->
  <PhotonThreshold> 0.80 </PhotonThreshold>

  <!-- Output ROOT file for trees/histograms -->
  <OutputFile> photon_trigger_ml_physics.root </OutputFile>

  <!-- Toggle saving the feature tree (already enabled in .cc) -->
  <SaveFeatures> true </SaveFeatures>

  <!-- Apply trigger decision (kept for compatibility with framework) -->
  <ApplyTrigger> true </ApplyTrigger>

</PhotonTriggerML>

