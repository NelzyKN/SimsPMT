<?xml version="1.0" encoding="iso-8859-1"?>

<!-- Configuration of PhotonTriggerML Module -->
<PhotonTriggerML>

  <!-- Energy range where we evaluate stations -->
  <EnergyMin unit="eV"> 1e18 </EnergyMin>
  <EnergyMax unit="eV"> 1e19 </EnergyMax>

  <!-- Base threshold before auto-calibration (kept for logging & startup) -->
  <PhotonThreshold> 0.60 </PhotonThreshold>

  <!-- Output ROOT file name -->
  <OutputFile> photon_trigger_ml_physics.root </OutputFile>

  <!-- Whether to load weights if present -->
  <LoadPretrainedWeights> true </LoadPretrainedWeights>

  <!-- Keep logging & diagnostics on -->
  <SaveFeatures> true </SaveFeatures>
  <ApplyTrigger> true </ApplyTrigger>

</PhotonTriggerML>

