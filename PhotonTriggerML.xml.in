<?xml version="1.0" encoding="iso-8859-1"?>

<!-- Configuration of PhotonTriggerML Module (calibrated version) -->

<PhotonTriggerML>

  <!-- Energy range for trigger application -->
  <EnergyMin unit="eV"> 1e18 </EnergyMin>
  <EnergyMax unit="eV"> 1e19 </EnergyMax>

  <!-- Base threshold (auto-updated by the module using MCC scan) -->
  <PhotonThreshold> 0.72 </PhotonThreshold>

  <!-- Inference output -->
  <OutputFile> photon_trigger_ml.root </OutputFile>

  <!-- Optional: load weights and disable online training for stability -->
  <LoadPretrainedWeights> true </LoadPretrainedWeights>
  <TrainOnline> false </TrainOnline>

  <!-- Optional: size of rolling calibration buffer -->
  <CalibrationBuffer> 6000 </CalibrationBuffer>

</PhotonTriggerML>

